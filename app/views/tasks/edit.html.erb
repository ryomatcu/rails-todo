<h1 class="my-4">Task
  <small>Edit</small>
</h1>




<%= form_for(@task) do |f| %>
  <div class='field'>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "50x10" %>
  </div>
  <div class='field'>
    <%= f.label :completed %><br>
    <%= f.check_box :completed, {:checked => @task.completed}, true, false %>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>
