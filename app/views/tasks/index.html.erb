<h1 class="my-4">Tasks
  <small>Index</small>
</h1>



<div class="row">
  <% @tasks.each do |task| %>
  <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
    <div class="card h-100 <%= task.completed ? 'bg-secondary' : '' %>">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to task.title, task %>
        </h4>
        <p class="card-text"><%= simple_format(h(task.description)) %></p>
        <p><%= link_to 'Edit', edit_task_path(task) %> | <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
