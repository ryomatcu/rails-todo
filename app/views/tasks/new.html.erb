<h1>New Task</h1>

<%= form_for(@task) do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_field :description %><br>
  Completed&nbsp;<%= f.check_box :completed, {}, true, false %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Back to Tasks', tasks_path %>